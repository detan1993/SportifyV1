<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Sportify-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/Sportify</jta-data-source>
    <class>entity.Customer</class>
    <class>entity.CustomerOrder</class>
    <class>entity.CustomerVoucher</class>
    <class>entity.Product</class>
    <class>entity.ProductReview</class>
    <class>entity.Setting</class>
    <class>entity.Staff</class>
    <class>entity.Voucher</class>
    <class>entity.Images</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
